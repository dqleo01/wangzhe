.heroListContainer{
    width:100%;
    height:40px;
}
.heroOption{
    width:100%;
    margin:10px auto;
    height:40px;
    border-bottom:1px solid #eaeaea;
}
.heroOption-btn{
    width:50px;
    height:26px;
    border-radius:4px;
    border:1px solid #ccc;
    margin-left:5%;
    line-height:26px;
    text-align:center;
    font-size:16px;
}
.heroListBox{
    width:100%;
    border-top:1px solid #ccc;
}
.heroList{
    margin-top:20px;
}
.heroList .heroListCon{
    height:200px;
}
.heroList image{
    width:80%;
    height:140px;
    margin-left:10%;
}
.heroList text{
    display:block;
    width:200px;
    margin-left:40%;
}